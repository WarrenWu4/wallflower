<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.0"/>
  <object class="GtkApplicationWindow" id="main_window">
    <property name="title">Wallflower</property>
    <property name="default-width">600</property>
    <property name="default-height">400</property>
    <property name="css-classes">main-window</property>
    <child>
      <object class="GtkBox">
        <property name="css-classes">root</property>
        <property name="orientation">vertical</property>
        <property name="spacing">10</property>

        <child>
          <object class="GtkBox" id="action-bar">
            <property name="orientation">horizontal</property>
            <property name="halign">fill</property>
            <property name="hexpand">true</property>
            <property name="spacing">16</property>
          </object>
        </child>

        <child>
          <object class="GtkGrid" id="backgrounds">
            <property name="css-classes">background-grid</property>
            <property name="row-spacing">12</property>
            <property name="column-spacing">12</property>
            <property name="hexpand">true</property>
          </object>
        </child>

      </object>
    </child>
  </object>
</interface>

